@model IEnumerable<EindWerk_CinemaTicket.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div style="position:static; right:25px;" class="text-white">
    <a asp-controller="Actor" asp-action="Insert" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePictureURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.ProfilePictureURL" width="20%"  alt="@item.FullName">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Update</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            @*<td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Update" asp-route="@item.ActorId"><i class="bi bi-pencil-square"></i> Update</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route="@item.ActorId"><i class="bi bi-eye-square"></i> Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route="@item.ActorId"><i class="bi bi-trash"></i> Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
