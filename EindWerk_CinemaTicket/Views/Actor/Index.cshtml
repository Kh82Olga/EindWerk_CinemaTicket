@model IEnumerable<EindWerk_CinemaTicket.Models.Actor>

leftata["Title"] = "Index";
}

<h1>Actors</h1>

@await Html.PartialAsync("_CreatePartialView","Actor")

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePictureURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img class="border-info rounded-circle" src="@item.ProfilePictureURL" width="30%"  alt="@item.FullName">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
              <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Update</a>
               @* <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Details</a>*@
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
              </td>       
             }
             <td class="align-middle">
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Details</a>
             </td>                                    
        </tr>
}
    </tbody>
</table>
    </div>
</div>
