@model IEnumerable<EindWerk_CinemaTicket.Models.CinemaHall>

@{
    ViewData["Title"] = "Cinemas";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Logo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Update</a>
                <a class="btn btn-outline-info"><i class="bi bi-eye-square"></i> Details</a>
                <a class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
