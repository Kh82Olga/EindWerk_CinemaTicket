@model Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="row">    
        <div class="col-md-8 offset-2">
            <div class="card mb-12">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.MovieName
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                         <img src="@Model.Image" width="100%"  alt="@Model.MovieName">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">@Model.Description</p>
                            <p class="card-text">
                                <b>Cinema: </b>
                                <a asp-controller="CinemaHall" asp-action="Details" asp-route-id="@Model.CinemaHallId">
                                    @Model.CinemaHall.Name
                                </a>
                            </p>
                            <p class="card-text">
                                <b>Genre: </b>
                                <a asp-controller="Genre" asp-action="Details" asp-route-id="@Model.GenreId">
                                    @Model.Genre.GenreName
                                </a>
                            </p>
                            <p class="card-text">
                                <b>Actors: </b>
                                <hr />
                                <div class="row">
                                @foreach (var actor in Model.ActorMovies)
                                {
                                    <div class="col-md-3 ">
                                        <img class="border-info rounded-circle" src="@actor.Actor.ProfilePictureURL" style="max-width: 150px" />
                                        <br />
                                        <a>@actor.Actor.FullName</a>
                                    </div>
                                }
                            </div>
                            </p>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right my-sm-2" asp-action="Index">
                                        Back to List
                                        </a>
                                    <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c"))</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
