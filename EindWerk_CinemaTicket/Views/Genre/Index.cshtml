@model IEnumerable<EindWerk_CinemaTicket.Models.Genre>

@{
    ViewData["Title"] = "Genre";
}

<h1>Genres</h1>

<div style="position:static; right:25px;" class="text-white">
    <a asp-controller="Genre" asp-action="Insert" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
             <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Update</a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-square"></i> Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
            </td>
            
        </tr>
}
    </tbody>
</table>
